<!DOCTYPE html>
<html>
  <head>
    <title>MeMix</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>MeMix</h1>
    <%=form_with url: '/', method: :get do |f|%>
      <%=f.label :query, "Search for:"%>
      <%=f.text_field :query%>
      <%=select_tag "filter", "<option>All</option><option>Music</option><option>Poetry</option><option>Movies/TV</option><option>Books</option><option>Artwork</option>".html_safe%>
      <%=f.submit "Search"%>
    <%end%>
  

    <%= yield %>
  </body>
</html>
